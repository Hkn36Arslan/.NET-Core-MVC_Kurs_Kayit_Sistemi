@model Candidate

<div class="display-6">
    Apply
</div>

<form method="post" asp-action="Apply">
    <div class="form-group my-2">
        <label asp-for="Email"></label>
        <input asp-for="Email"type="email" class="form-control" />
    </div>
    <div class="form-group my-2">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" type="text" name="FirstName" class="form-control" />
    </div>
    <div class="form-group my-2">
        <label asp-for="LastName"></label>
        <input asp-for="LastName"type="text" name="LastName" class="form-control" />
    </div>
    <div class="form-group my-2">
        <label  asp-for="Age"></label>
        <select asp-for="Age" class="form-control">
            <option value="18">18</option>
            <option value="19">19</option>
            <option value="20">20</option>
            <option value="21">21</option>
            <option value="22">22</option>
            <option value="23">23</option>
        </select>
    </div>
    <fieldset>
        <legend>Select One Course</legend>
        <p>
            <input type="radio" id="mvc"  asp-for="SelectedCourse"  value="ASP.Net Core MVC">
            <label>ASP.Net Core MVC</label>
        </p>
        <p>
            <input type="radio" id="api" asp-for="SelectedCourse" value="ASP.Net Core API">
            <label>ASP.Net Core API</label>
        </p>
        <p>
            <input type="radio" id="blazor" asp-for="SelectedCourse" value="Blazor">
            <label>Blazor</label>
        </p>
    </fieldset>

     <div>
        <button type="submit" class="btn btn-primary">Apply</button>
        <a class="btn btn-warning" asp-controller="Home" asp-action="Index">Home</a>
    </div>

</form>